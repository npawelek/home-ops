---
apiVersion: helm.toolkit.fluxcd.io/v2beta2
kind: HelmRelease
metadata:
  name: &name kubernetes-replicator
spec:
  interval: 30m
  chart:
    spec:
      chart: *name
      version: 2.10.0
      sourceRef:
        kind: HelmRepository
        name: mittwald
        namespace: flux-system
  maxHistory: 2
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  uninstall:
    keepHistory: false
  values:
    fullnameOverride: *name
    image:
      repository: quay.io/mittwald/kubernetes-replicator
      tag: v2.10.2@sha256:7db73cb64414f3a703228103d965a89c56e850a6c76718fe69ffb2125ad8c456
    args:
      - -resync-period=5m
    grantClusterAdmin: false
    serviceAccount:
      create: true
      name: *name
      privileges:
        - apiGroups: [""]
          resources: ["namespaces"]
        - apiGroups: [""]
          resources: ["secrets", "configmaps"]
        - apiGroups: ["rbac.authorization.k8s.io"]
          resources: ["roles", "rolebindings"]
