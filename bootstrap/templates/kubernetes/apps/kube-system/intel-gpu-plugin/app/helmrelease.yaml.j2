---
apiVersion: helm.toolkit.fluxcd.io/v2beta2
kind: HelmRelease
metadata:
  name: intel-gpu-plugin
  namespace: kube-system
spec:
  dependsOn:
    - name: node-feature-discovery
      namespace: kube-system
  interval: 30m
  chart:
    spec:
      chart: app-template
      version: 1.5.1
      sourceRef:
        kind: HelmRepository
        name: bjw-s
        namespace: flux-system
  maxHistory: 2
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  uninstall:
    keepHistory: false
  values:
    image:
      repository: docker.io/intel/intel-gpu-plugin
      tag: 0.31.1@sha256:31f4543e44fca9c6b3fb116293318bdd50158d1bbc00ffb8c9c24b40a6893c35
      pullPolicy: IfNotPresent
    controller:
      type: daemonset
      strategy: RollingUpdate
    args:
      - -shared-dev-num
      - "2"
    affinity:
      nodeAffinity:
        requiredDuringSchedulingIgnoredDuringExecution:
          nodeSelectorTerms:
            - matchExpressions:
                - key: intel.feature.node.kubernetes.io/igpu
                  operator: In
                  values:
                    - "true"
            - matchExpressions:
                - key: intel.feature.node.kubernetes.io/arc
                  operator: In
                  values:
                    - "true"
    service:
      main:
        enabled: false
    ingress:
      main:
        enabled: false
    persistence:
      devfs:
        enabled: true
        type: hostPath
        hostPath: /dev/dri
        hostPathType: Directory
        readOnly: true
      sysfs:
        enabled: true
        type: hostPath
        hostPath: /sys/class/drm
        hostPathType: Directory
        readOnly: true
      kubeletsockets:
        enabled: true
        type: hostPath
        hostPathType: Directory
        hostPath: /var/lib/kubelet/device-plugins
    # TODO(intel-gpu-plugin): Add probes
    probes:
      liveness:
        enabled: false
      readiness:
        enabled: false
      startup:
        enabled: false
    resources:
      requests:
        cpu: 15m
        memory: 64M
      limits:
        memory: 64M
