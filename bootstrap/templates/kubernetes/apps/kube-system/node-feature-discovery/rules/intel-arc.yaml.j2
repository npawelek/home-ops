---
apiVersion: nfd.k8s-sigs.io/v1alpha1
kind: NodeFeatureRule
metadata:
  name: intel-arc
spec:
  rules:
    - name: intel.arc
      labels:
        intel.feature.node.kubernetes.io/arc: "true"
      matchFeatures:
        - feature: pci.device
          matchExpressions:
            class: {op: In, value: ["0300"]}
            vendor: {op: In, value: ["8086"]}
            device: {op: In, value: ["56a2"]}
